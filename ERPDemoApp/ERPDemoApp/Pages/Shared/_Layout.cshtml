@* Marketing layout voor publieke site *@
@{
 var title = ViewData["Title"] as string ?? "ERP Demo";
}
<!doctype html>
<html lang="nl">
<head>
 <meta charset="utf-8" />
 <meta name="viewport" content="width=device-width, initial-scale=1" />
 <title>@title - ERPDemo</title>

 <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
 <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
 <link rel="stylesheet" href="~/css/pages/components/navbar.css" asp-append-version="true" />
 <link rel="stylesheet" href="~/css/pages/components/footer.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body class="marketing-shell">

 @await Html.PartialAsync("~/Pages/Shared/Ui/_Navbar.cshtml")

 <main id="content" class="flex-fill">
 @RenderBody()
 </main>

 @await Html.PartialAsync("~/Pages/Shared/Ui/_Footer.cshtml")

 <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
 @RenderSection("Scripts", required: false)
</body>
</html>

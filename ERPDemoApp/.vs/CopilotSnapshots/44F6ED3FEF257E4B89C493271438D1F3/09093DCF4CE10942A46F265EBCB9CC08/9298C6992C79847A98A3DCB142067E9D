 @* Auth card / Mini profile *@
 @{
 var isAuth = User?.Identity?.IsAuthenticated ?? false;
 var displayName = User?.Identity?.Name ?? "Gebruiker";
 var email = User?.FindFirst("email")?.Value ?? User?.FindFirst("http://schemas.xmlsoap.org/ws/2005/05/identity/claims/emailaddress")?.Value ?? string.Empty;
 var initials = string.Join("", (displayName ?? "").Split(' ', System.StringSplitOptions.RemoveEmptyEntries).Take(2).Select(s => s[0])).ToUpperInvariant();
 }

 @if (!isAuth)
 {
 <div class="erp-authcard">
 <div class="erp-authcard-header">

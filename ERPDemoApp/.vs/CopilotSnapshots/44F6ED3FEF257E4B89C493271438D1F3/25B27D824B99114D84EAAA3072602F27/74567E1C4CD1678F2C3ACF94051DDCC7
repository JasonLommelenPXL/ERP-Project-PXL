/* ----------------------------
   Minimal ERP-styling (full)
   ---------------------------- */

*, *::before, *::after {
    box-sizing: border-box;
}

:root {
    --erp-card-bg: #f7f9fc;
    --erp-card-border: #eef2f7;
    --erp-text: #1f2937;
    --erp-muted: #6b7280;
    --erp-radius: 14px;
    --erp-shadow: 0 6px 20px rgba(0, 0, 0, .06);
    --icon-size: 56px;
    --icon-radius: 12px;
    /* vaste minimale hoogte voor alle kaarten (pas aan naar wens) */
    --erp-card-min-h: 120px;
}

/* Titel & secties */
.erp-title {
    font-family: "Segoe UI", system-ui, -apple-system;
    font-size: 2rem;
    font-weight: 800;
    margin: 1.5rem;
}

.erp-section {
    margin: 2.5rem;
}

/* Kaarten */
.erp-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    background: var(--erp-card-bg);
    border: 1px solid var(--erp-card-border);
    border-radius: var(--erp-radius);
    padding: .875rem 1.25rem; /* iets compacter voor vaste hoogte */
    text-decoration: none;
    color: var(--erp-text);
    box-shadow: var(--erp-shadow);
    transition: transform .15s ease-in-out, box-shadow .15s ease-in-out;
    /* overal exact dezelfde minimumhoogte */
    min-height: var(--erp-card-min-h);
}

    .erp-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 24px rgba(0, 0, 0, .12);
    }

    /* Titel en tekst clamp zodat ze de hoogte niet vergroten */
    .erp-card h3 {
        margin: 0 0 .25rem 0;
        font-size: 1.125rem;
        font-weight: 700;
        white-space: nowrap; /* altijd 1 regel */
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .erp-card p {
        margin: 0;
        color: var(--erp-muted);
        display: -webkit-box; /* multi-line ellipsis */
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 2; /* max 2 regels */
        overflow: hidden;
        line-height: 1.25;
    }

    /* Icon-tegel (pixelvast + immuun voor externe styles) */
    .erp-card .erp-icon {
        width: var(--icon-size);
        height: var(--icon-size);
        min-width: var(--icon-size);
        min-height: var(--icon-size);
        max-width: var(--icon-size);
        max-height: var(--icon-size);
        flex: 0 0 var(--icon-size);
        padding: 0 !important;
        border: 0 !important;
        margin: 0;
        line-height: 0;
        font-size: 0;
        overflow: hidden;
        display: grid;
        place-items: center;
        border-radius: var(--icon-radius);
        aspect-ratio: 1 / 1;
        contain: layout paint size;
    }

/* Inhoud (SVG/icon-font/IMG) consistent centreren en schalen */
.erp-icon > svg,
.erp-icon > i,
.erp-icon > img {
    width: 24px;
    height: 24px;
    display: block;
    line-height: 0;
    font-size: 24px; /* relevant voor icon-fonts */
}

